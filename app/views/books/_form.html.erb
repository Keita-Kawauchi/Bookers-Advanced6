<%= render 'layouts/errors', obj: @book %>
<%= form_with model: book, local: true do |f| %>
 <%= f.label :title %>
 <%= f.text_field :title, class: "col-xs-12 form-control book_title" %>

 <%= f.label :opinion %>
 <%= f.text_area :body, class: "col-xs-12 form-control book_body" %>

 <%= f.submit 'Create Book', class: "btn btn-success text-white"%>
<% end %>